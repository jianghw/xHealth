<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray"
    android:orientation="vertical">


    <include
        android:id="@+id/in_title"
        layout="@layout/include_action_bar" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        style="@style/Bg_Lay_Press"
        android:orientation="horizontal">

        <TextView
            style="@style/Doctor_TitleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="持卡人" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/BodyText_Body"
            android:layout_width="0dp"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/ivHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bankinfo" />
    </LinearLayout>

    <TextView style="@style/Line_Gap" />

    <LinearLayout
        style="@style/Bg_Lay_Press">

        <TextView
            style="@style/Doctor_TitleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="卡类型" />

        <TextView
            android:id="@+id/tv_bankCardType"
            style="@style/BodyText_Body"
            android:textColorHint="@color/color_label_gray"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint=" 请选择银行卡类型" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bankinfo"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView style="@style/Line_Gap" />

    <LinearLayout style="@style/Bg_Lay_Press">

        <TextView
            style="@style/Doctor_TitleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="发卡网点" />

        <EditText
            android:id="@+id/edt_place"
            style="@style/EditText_Frame_extra"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="3"
            android:hint=" 请输入发卡网点" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bankinfo"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView style="@style/Line_Gap" />

    <LinearLayout style="@style/Bg_Lay_Press">

        <TextView
            style="@style/Doctor_TitleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="卡号" />

        <EditText
            android:id="@+id/edt_bankCardCode"
            style="@style/EditText_Frame_extra"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:maxLength="20"
            android:gravity="center"
            android:hint=" 请输入卡号"
            android:inputType="number" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bankinfo"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_26"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发卡网点:"
            android:textColor="@color/colornormalblack"
            android:textSize="@dimen/normaltext" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="例如中国工商银行上海市七宝支行"
            android:textColor="#8b8c8e"
            android:textSize="@dimen/normaltext" />
    </LinearLayout>


</LinearLayout>
