<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_title_medicalhistory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toptitle_height"
        android:background="@color/kaurihealth_header_background">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/toptitleback" />

        <TextView
            android:id="@+id/tv_clinicalName"
            style="@style/toptitletv"
            android:text="医疗动态"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <ListView
        android:id="@+id/prlv_clinical"
        style="@style/refreshview"></ListView>

</LinearLayout>
