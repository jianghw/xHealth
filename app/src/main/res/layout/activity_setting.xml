<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/in_title"
        layout="@layout/include_bar_no_more" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lay_resetpass"
                style="@style/Bg_Lay_Press"
                android:layout_marginTop="@dimen/margin_16">

                <TextView
                    style="@style/Doctor_TitleText"
                    android:text="修改密码" />

                <ImageView
                    style="@style/Image_Arrow_Right"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_agreement"
                style="@style/Bg_Lay_Press"
                android:layout_marginTop="@dimen/margin_16">

                <TextView
                    style="@style/Doctor_TitleText"
                    android:text="服务协议" />

                <ImageView style="@style/Image_Arrow_Right" />

            </RelativeLayout>

            <TextView style="@style/Line_Gap" />

            <RelativeLayout
                android:id="@+id/secret_setting"
                style="@style/Bg_Lay_Press">

                <TextView
                    style="@style/Doctor_TitleText"
                    android:text="服务说明" />

                <ImageView
                    style="@style/Image_Arrow_Right"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/opinion_feedback"
                style="@style/Bg_Lay_Press"
                android:layout_marginTop="@dimen/margin_16">

                <TextView
                    style="@style/Doctor_TitleText"
                    android:text="意见反馈" />

                <ImageView
                    style="@style/Image_Arrow_Right"
                    android:src="@mipmap/arrow_right" />


            </RelativeLayout>

            <TextView style="@style/Line_Gap" />

            <RelativeLayout
                android:id="@+id/lay_hotline"
                style="@style/Bg_Lay_Press">

                <TextView
                    style="@style/Doctor_TitleText"
                    android:text="客服热线" />

                <ImageView
                    style="@style/Image_Arrow_Right"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_versionName"
                style="@style/Bg_Lay_Press"
                android:layout_marginTop="@dimen/margin_20">

                <TextView
                    style="@style/Doctor_TitleText"
                    android:text="版本更新" />

                <TextView
                    android:id="@+id/tvVersionName"
                    style="@style/Doctor_TitleText"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_20"
                    android:text="当前版本：1.02"
                    android:textSize="@dimen/textSize_12" />
            </RelativeLayout>


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height_48"
                android:layout_marginTop="@dimen/margin_26"
                android:background="@drawable/bg_white_press"
                android:text="退出登录"
                android:textColor="@color/color_red"
                android:textSize="@dimen/textSize_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>