<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kaurihealth_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_title_medicalhistory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toptitle_height"
            android:background="@color/kaurihealth_header_background">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/toptitleback" />

            <TextView
                style="@style/toptitletv"
                android:text="设置" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lay_resetpass"
            style="@style/rlay_personinfo"
            android:layout_marginTop="8dp">

            <TextView
                style="@style/tv_personinfo"
                android:text="修改密码" />

            <ImageView
                style="@style/iv_personinfo"
                android:src="@mipmap/arrow_right" />


        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <RelativeLayout
            android:id="@+id/lay_agreement"
            style="@style/rlay_personinfo"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/tv_personinfo"
                android:text="服务协议" />

            <ImageView
                style="@style/iv_personinfo"
                android:src="@mipmap/arrow_right" />

        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <RelativeLayout
            android:id="@+id/secret_setting"
            style="@style/rlay_personinfo">

            <TextView
                style="@style/tv_personinfo"
                android:text="服务说明" />

            <ImageView
                style="@style/iv_personinfo"
                android:src="@mipmap/arrow_right" />


        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <RelativeLayout
            android:id="@+id/opinion_feedback"
            style="@style/rlay_personinfo"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/tv_personinfo"
                android:text="意见反馈" />

            <ImageView
                style="@style/iv_personinfo"
                android:src="@mipmap/arrow_right" />


        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <RelativeLayout
            android:id="@+id/lay_hotline"
            style="@style/rlay_personinfo">

            <TextView
                style="@style/tv_personinfo"
                android:text="客服热线" />

            <ImageView
                style="@style/iv_personinfo"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <TextView
            style="@style/line_personinfo"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/lay_versionName"
            style="@style/rlay_personinfo">

            <TextView
                style="@style/tv_personinfo"
                android:text="版本更新" />

            <TextView
                android:id="@+id/tvVersionName"
                style="@style/tv_personinfo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:text="当前版本：1.02"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="退出登录"
            android:textColor="@color/holo_red_light"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>