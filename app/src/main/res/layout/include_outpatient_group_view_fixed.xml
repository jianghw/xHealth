<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_fixed_measurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--医师-->
        <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
            android:id="@+id/lay_fixed_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="医师："/>

        <!--科室-->
        <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
            android:id="@+id/lay_fixed_departments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="科室："/>

        <!--机构-->
        <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
            android:id="@+id/lay_fixed_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="机构："/>

        <!--入院时间-->
        <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
            android:id="@+id/lay_fixed_createdDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="录入时间："/>
    </LinearLayout>
</merge>