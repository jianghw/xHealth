<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_bar_no_more" />

    <com.kaurihealth.utilslib.widget.HeaderFooterGridView
        android:paddingTop="@dimen/padding_8"
        android:id="@+id/gv_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:columnWidth="@dimen/margin_60"
        android:gravity="center"
        android:horizontalSpacing="@dimen/padding_8"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="@dimen/padding_8"
        tools:listitem="@layout/gv_item_group_conver" />
</LinearLayout>