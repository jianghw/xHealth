<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg_gray"
              android:orientation="vertical"
              tools:context=".patient_v.long_monitoring.CompileProgramActivity">

    <include layout="@layout/include_action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_rounded_box_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height_48"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_first"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/bg_edt_login"
                android:gravity="center"
                android:hint="@string/monitor_hint_data"
                android:inputType="number"/>

            <TextView
                android:id="@+id/tv_first_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                tools:text="mmHg"/>

            <TextView
                android:id="@+id/tv_date_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="@string/monitor_data"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height_48"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1.5"
                android:background="@drawable/bg_edt_login"
                android:gravity="center"
                android:hint="@string/monitor_hint_data"
                android:inputType="number"/>

            <TextView
                android:id="@+id/tv_second_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="mmHg"/>

            <TextView
                android:id="@+id/tv_date_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="@string/monitor_data"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
