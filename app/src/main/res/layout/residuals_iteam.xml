<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secret_setting1"
    style="@style/rlay_personinfo_copy">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="提现"
        android:textColor="@android:color/black"
        android:textSize="@dimen/login_tv_textSize" />

    <LinearLayout
        android:id="@+id/lay1_homitam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2016—01-26"
            android:textColor="@color/texthomeiteam"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_hasread_homeiteam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_currentTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="+850.00"
            android:textColor="@color/texthomeiteam"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_type"
        android:layout_below="@id/tv_type"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/lay1_homitam1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="余额：0.00" />

</RelativeLayout>