<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/patientrelleft_tv"
                android:text="服务项目："/>

            <TextView
                style="@style/patientrelleft_tv"
                android:layout_marginTop="@dimen/patientrightmargintop"
                android:gravity="center"
                android:text="剩余时间："/>

            <TextView
                style="@style/patientrelleft_tv"
                android:layout_marginTop="@dimen/patientrightmargintop"
                android:gravity="top"
                android:text="请求原因："/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvType"
                style="@style/patientrelleft_tv.right"
                android:text=""
                android:textColor="#FFFF6600"/>

            <LinearLayout
                android:id="@+id/lay"
                style="@style/patientrelleft_tv.right"
                android:layout_marginTop="@dimen/patientrightmargintop"
                android:background="@drawable/bg_edt_red"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvDay"
                    style="@style/patientrelleft_tv.right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@mipmap/timebg"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="10dp"
                    tools:text="01天"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    tools:text="00:00:00"
                    android:textColor="@color/textblue"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTimeTag"
                style="@style/patientrelleft_tv.right"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="请您于48小时内完成咨询服务"
                android:textColor="@color/holo_blue_light"
                android:visibility="visible"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvReason"
                    style="@style/patientrelleft_tv2.right"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"

                    android:layout_marginTop="@dimen/patientrightmargintop"
                    android:gravity="top"
                    android:text=" "/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>