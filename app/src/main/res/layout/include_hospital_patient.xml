<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_marginRight="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dimen_12"
        app:cardElevation="@dimen/dimen_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_14"
            android:paddingTop="@dimen/dimen_14">

            <!--姓名-->
            <TextView
                android:id="@+id/tv_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_14"
                android:text="姓名："
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/textSize_12"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_name_title"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/textSize_12"
                tools:text="ssssssssss"/>
            <!--性别-->
            <TextView
                android:id="@+id/tv_gendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_gendar"
                android:text="性别："
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/textSize_12"/>

            <TextView
                android:id="@+id/tv_gendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/textSize_12"
                tools:text="男"/>

            <ImageView
                android:id="@+id/img_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toRightOf="@+id/tv_gendar"
                android:src="@drawable/gender_icon"/>

            <TextView
                android:id="@+id/tv_age_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_age"
                android:text="年龄："
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/textSize_12"/>

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_14"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/textSize_12"
                tools:text="25"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</merge>