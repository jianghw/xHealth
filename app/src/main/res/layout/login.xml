<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.example.commonlibrary.widget.CircleImageView
        android:id="@+id/portrait_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/layout_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:src="@mipmap/loginys"
        app:civ_border_overlay="true"
        app:civ_border_color="@color/green"
        app:civ_border_width="0.5dp"/>

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_name_login"
                style="@style/edtbg"
                android:drawableLeft="@mipmap/username"
                android:drawablePadding="6dp"
                android:hint="请输入用户名"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text=""
                android:textColorHint="#cccccc" />
            <ImageView
                android:id="@+id/delete_username"
                android:src="@mipmap/ic_login_delete"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_password_login"
                style="@style/edtbg"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="6dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="123456789"
                android:textColorHint="#cccccc" />

            <ImageView
                android:id="@+id/delete_password"
                android:src="@mipmap/ic_login_delete"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/select_btn_login"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tv_register_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="立即注册"
                    android:textColor="#ff9800"
                    android:textSize="@dimen/login_tv_textSize" />

                <TextView
                    android:id="@+id/tv_forgetpassword_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:text="忘记密码？"
                    android:textColor="#999999"
                    android:textSize="@dimen/login_tv_textSize" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register_login2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text=""
                android:textSize="@dimen/login_tv_textSize" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>