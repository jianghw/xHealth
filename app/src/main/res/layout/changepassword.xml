<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_title_medicalhistory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toptitle_height"
            android:background="@color/kaurihealth_header_background">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/toptitleback" />

            <TextView
                style="@style/toptitletv"
                android:text="修改密码" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlayOriginalPassWord"
            style="@style/rlay_personinfo">

            <TextView
                style="@style/tv_personinfo"
                android:textColor="@color/app_tv_color"
                android:text="原  密  码:" />

            <EditText
                android:id="@+id/edtOriginalPassWord"
                style="@style/edt1_exclusive_doctor"
                android:layout_centerVertical="true"
                android:inputType="textPassword" />

        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <RelativeLayout
            android:id="@+id/rlayNewPassword"
            style="@style/rlay_personinfo">

            <TextView
                style="@style/tv_personinfo"
                android:text="新  密  码:" />

            <EditText
                android:id="@+id/edtNewPassword"
                style="@style/edt1_exclusive_doctor"
                android:layout_centerVertical="true"
                android:inputType="textPassword" />

        </RelativeLayout>

        <TextView style="@style/line_personinfo" />

        <RelativeLayout
            android:id="@+id/rlayConfirmPassword"
            style="@style/rlay_personinfo">

            <TextView
                style="@style/tv_personinfo"
                android:text="确认密码:" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                style="@style/edt1_exclusive_doctor"
                android:layout_centerVertical="true"
                android:inputType="textPassword" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_Submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/select_btn_login"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>