<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.fragment.BlankPatientFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rlayNewPassword"
            style="@style/rlay_personinfo.blankdoctor"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_blanname2"
                style="@style/tv_blankd"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.25"
                android:text="患者" />

            <TextView
                android:id="@+id/tv_gender2"
                style="@style/tv_blankd"
                android:layout_weight="0.25"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_departmentName2"
                style="@style/tv_blankd"
                android:layout_weight="0.25"
                android:text="年龄" />

            <TextView
                android:id="@+id/tv_departmentName4"
                style="@style/tv_blankd"
                android:layout_marginRight="15dp"
                android:layout_weight="0.18"
                android:text="" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/history_recordes_fragment_blank_patient"
            style="@style/rlay_personinfo.blankdoctor"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:layout_height="60dp"

            >
            <TextView
                android:textColor="#797777"
                android:textSize="15sp"

                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近搜索"/>
            <TextView
                android:id="@+id/fragment_blank_patient_clear_record"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="#50d2c2"
                android:text="清除历史搜索"/>


        </RelativeLayout>


    </RelativeLayout>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:background="#FFF2F2F2"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:verticalSpacing="10dp">

        </ListView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>
