<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <LinearLayout style="@style/medicalrecord_top_linelay">

        <TextView
            style="@style/medicalrecord_top_tv1"
            android:text="患者:" />

        <TextView
            android:id="@+id/tvPatientName"
            style="@style/medicalrecord_top_tv2"
            android:text="尹双" />
    </LinearLayout>

    <LinearLayout style="@style/medicalrecord_top_linelay">

        <TextView
            style="@style/medicalrecord_top_tv1"
            android:text="性别:" />

        <TextView
            android:id="@+id/tvPatientGender"
            style="@style/medicalrecord_top_tv2"
            android:text="女" />
    </LinearLayout>

    <LinearLayout style="@style/medicalrecord_top_linelay">

        <TextView
            style="@style/medicalrecord_top_tv1"
            android:text="年龄:" />

        <TextView
            android:id="@+id/tvAge"
            style="@style/medicalrecord_top_tv2"
            android:text="25岁" />
    </LinearLayout>


</LinearLayout>