<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg_gray"
              android:orientation="vertical"
              tools:context=".patient_v.medical_records.MedicalRecordActivity">

    <include layout="@layout/include_action_bar"/>

    <com.kaurihealth.utilslib.widget.UiTableBottom
        android:id="@+id/ui_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_height"
        android:background="@color/color_white"/>

    <com.kaurihealth.utilslib.widget.ScrollChildSwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.kaurihealth.utilslib.widget.ScrollChildSwipeRefreshLayout>

</LinearLayout>
