<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray"
    android:orientation="vertical">

    <include layout="@layout/include_bar_no_more" />

    <RelativeLayout
        style="@style/Bg_Lay_Press"
        android:layout_marginTop="@dimen/margin_16">

        <TextView
            android:id="@+id/tv2"
            style="@style/tv1_open_an_account"
            android:layout_width="70dp"
            android:gravity="right"
            android:text="手机号码:" />

        <EditText
            android:id="@+id/edt_phonenumber"
            style="@style/content_open_an_account"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv2"
            android:background="@null"
            android:inputType="phone" />

    </RelativeLayout>

    <View style="@style/Line_Match" />

    <RelativeLayout
        android:id="@+id/radio"
        style="@style/Bg_Lay_Press">

        <TextView
            android:id="@+id/tv1"
            style="@style/tv1_open_an_account"
            android:layout_width="70dp"
            android:text="验  证  码:" />

        <EditText
            android:id="@+id/edt_verification_code"
            style="@style/content_open_an_account"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv1"
            android:background="@null" />

        <TextView
            android:id="@+id/tv_get_verificationcode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="获取验证码"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/edtmargintop"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="下一步"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>