<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <com.kaurihealth.utilslib.widget.CircleImageView
        android:id="@+id/iv_photo_homeiteam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/ic_circle_head_green"
        app:civ_border_overlay="true"
        app:civ_border_color="@color/color_green"
        app:civ_border_width="0.5dp"/>

    <TextView
        android:id="@+id/tv_name_homeiteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_photo_homeiteam"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/login_tv_textSize" />

    <TextView
        android:id="@+id/tv_name_request_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_name_homeiteam"
        android:text="xxx"
        android:textColor="#FFFF6600"
        android:textSize="@dimen/login_tv_textSize" />

    <LinearLayout
        android:id="@+id/lay1_homitam_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time_homitam_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:text="11:35"
            android:textColor="@color/texthomeiteam"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay1_homitam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_photo_homeiteam"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time_homitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:text="11:35"
            android:textColor="@color/texthomeiteam"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_reason_homeiteam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name_homeiteam"
        android:layout_below="@id/tv_name_homeiteam"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/lay1_homitam"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="" />
</RelativeLayout>