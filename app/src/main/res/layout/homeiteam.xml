<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="0dp"
                android:paddingTop="10dp">

                <com.kaurihealth.utilslib.widget.CircleImageView
                    android:id="@+id/iv_photo_homeiteam"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:src="@mipmap/ic_circle_head_green"
                    app:civ_border_color="@color/color_green"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.5dp" />

                <TextView
                    android:id="@+id/tv_name_homeiteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_toRightOf="@id/iv_photo_homeiteam"
                    tool:text="ffff"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/login_tv_textSize" />

                <TextView
                    android:id="@+id/tv_name_request_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_name_homeiteam"
                    android:text="xxx"
                    android:textColor="#FFFF6600"
                    android:textSize="@dimen/login_tv_textSize"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lay1_homitam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/iv_photo_homeiteam"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/iv_photo_homeiteam"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_homitam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="18dp"
                        android:text="11:35"
                        android:textColor="@color/texthomeiteam"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_reason_homeiteam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tool:text="dfdfdfd"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/tv_name_homeiteam"
                    android:layout_alignStart="@+id/tv_name_homeiteam" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/lay1_homitam_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_homitam_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="18dp"
                android:text="11:35"
                android:textColor="@color/texthomeiteam"
                android:textSize="13sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/im_request_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/romote_service" />

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>