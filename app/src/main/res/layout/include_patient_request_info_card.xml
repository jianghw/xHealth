<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/bg_white"
        android:paddingBottom="@dimen/margin_16">

        <com.kaurihealth.utilslib.widget.CircleImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/margin_60"
            android:layout_height="@dimen/margin_60"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_16"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_circle_head_green"
            app:civ_border_color="@color/color_green"
            app:civ_border_overlay="true"
            app:civ_border_width="1px"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_photo"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_toRightOf="@id/iv_photo"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:textColor="@color/app_tv_color"
            android:textSize="@dimen/textSize_18"
            tools:text="李晓燕"/>

        <TextView
            android:id="@+id/tv_gendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_toRightOf="@id/tv_name"
            android:textColor="@color/app_tv_color"
            android:textSize="@dimen/textSize_14"
            tools:text="女"/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_gendar"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_toRightOf="@id/tv_gendar"
            android:textColor="@color/app_tv_color"
            android:textSize="@dimen/textSize_14"
            tools:text="30岁"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_photo"
            android:layout_marginLeft="@dimen/margin_16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/patientrelleft_tv"
                    android:gravity="center"
                    android:text="服务项目："/>

                <TextView
                    style="@style/patientrelleft_tv"
                    android:gravity="center"
                    android:text="预约时间："/>

                <TextView
                    style="@style/patientrelleft_tv"
                    android:gravity="center"
                    android:text="当前状态："/>

                <TextView
                    style="@style/patientrelleft_tv"
                    android:gravity="center"
                    android:text="联系电话："/>

                <TextView
                    style="@style/patientrelleft_tv"
                    android:gravity="center"
                    android:text="联系地址："/>

                <TextView
                    style="@style/patientrelleft_tv"
                    android:gravity="center"
                    android:text="预约原因："/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/request_type"
                    style="@style/patientrelleft_tv"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:textColor="#FFFF6600"
                    tools:text="有姐姐说"/>

                <!---->

                <TextView
                    android:id="@+id/request_time"
                    style="@style/patientrelleft_tv"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text="请您于48小时内完成咨询服务"
                    android:textColor="@color/app_tv_color"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_tel_patientinfo_state"
                    style="@style/patientrelleft_tv"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:textColor="#FFFF6600"
                    tools:text="fdfsfsfsdfdsfdfs"/>

                <TextView
                    android:id="@+id/request_patient_phone"
                    style="@style/patientrelleft_tv"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/textblue"
                    android:textSize="14sp"
                    tools:text="fdffffffffffffffffffffffsdfdsfdsf"/>

                <TextView
                    android:id="@+id/request_patient_adress"
                    style="@style/patientrelleft_tv"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:lines="2"
                    tools:text="上海市"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/request_reason"
                    style="@style/patientrelleft_tv"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_16"
                    android:gravity="center_vertical|left"
                    android:textSize="14sp"
                    tools:text="等等"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</merge>