<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kaurihealth_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_title_medicalhistory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toptitle_height"
        android:background="@color/kaurihealth_header_background">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/toptitleback" />

        <TextView
            style="@style/toptitletv"
            android:text="拒绝预约"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_operate"
            style="@style/toptitleedit"
            android:text="完成"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout style="@style/rlay_major_strength">

        <EditText
            android:id="@+id/edt_name"
            style="@style/edt_major_strength" />

        <TextView
            style="@style/tv_major_strength"
            android:text="限500字" />
    </RelativeLayout>
</LinearLayout>
