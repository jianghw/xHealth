<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_gravity="center">

    <com.example.commonlibrary.widget.CircleImageView
        android:id="@+id/iv_userAvartar"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/xxhdp" />

    <TextView
        android:id="@+id/tv_userFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_userAvartar"
        android:text="杜江（朋友）"
        android:textColor="#979797"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_literatureCommentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_userFullName"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_userAvartar"
        android:text="支持医疗改革"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_literatureCommentContent"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_userAvartar"
        android:text="04-06 16:16"
        android:textColor="#cccccc"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_literatureCommentContent"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_createTime"
        android:text="删除"
        android:textColor="#50d2c2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="回复"
        android:textColor="#50d2c2"
        android:textSize="14sp" />

    <com.kaurihealth.kaurihealth.clinical_v.Utils.MyItemListView
        android:id="@+id/lv_LiteratureReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_literatureCommentContent"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="30dp"
        android:divider="#ffffff"
        android:dividerHeight="0dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">
    </com.kaurihealth.kaurihealth.clinical_v.Utils.MyItemListView>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:background="#afadad"
        android:layout_height="0.2dp"/>
</RelativeLayout>

</LinearLayout>
