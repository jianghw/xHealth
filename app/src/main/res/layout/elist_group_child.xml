<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/input_height_48"
              android:background="@drawable/bg_white_press"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_weight="4"
        android:gravity="center_vertical|left"
        android:padding="8dp"
        android:textColor="@color/color_green"
        android:textSize="14sp"
        tools:text="消化内科"/>


    <ImageView
        android:id="@+id/img_first"
        android:layout_width="@dimen/margin_16"
        android:layout_height="@dimen/margin_16"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_el_group_child"
        android:visibility="invisible"
        android:layout_margin="@dimen/margin_10"/>

    <ImageView
        android:id="@+id/img_second"
        android:layout_width="@dimen/margin_16"
        android:layout_height="@dimen/margin_16"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_el_group_child"
        android:visibility="invisible"
        android:layout_margin="@dimen/margin_10"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_label_gray"
        android:textSize="@dimen/textSize_12"
        tools:text="2015-09-23"/>
</LinearLayout>