<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTime"
        style="@style/chatiteamtv"
        android:text="3/30  21:36" />

    <com.example.commonlibrary.widget.CircleImageView
        android:id="@+id/circleiv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvTime"
        android:layout_marginTop="8dp"
        android:src="@mipmap/xxhdp"
        app:civ_border_overlay="true"
        app:civ_border_color="@color/green"
        app:civ_border_width="0.1dp">

    </com.example.commonlibrary.widget.CircleImageView>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/circleiv_photo"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"

        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/circleiv_photo"
        android:background="@drawable/chat_other_new"
        android:editable="false"
        android:text="明天你有时间吗"
        android:gravity="center_vertical"
        android:textColor="@android:color/black" />

</RelativeLayout>