<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lay_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dimen_14">

        <com.kaurihealth.utilslib.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dimen_48"
            android:layout_height="@dimen/dimen_48"
            android:src="@mipmap/ic_circle_head_green"
            app:civ_border_color="@color/color_cv_border"
            app:civ_border_overlay="true"
            app:civ_border_width="0.5dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_toRightOf="@+id/iv_avatar"
            android:textColor="#000b23"
            android:textSize="@dimen/textSize_16"
            tools:text="Gjiazhe"/>

        <TextView
            android:id="@+id/tv_doctor_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_toRightOf="@+id/tv_name"
            android:textColor="#293d47"
            android:textSize="12sp"
            android:singleLine="true"
            tools:text="儿科"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_icon"/>

        <TextView
            android:id="@+id/tv_doctor_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_avatar"
            android:layout_alignLeft="@+id/tv_name"
            android:textColor="#8ba4c4"
            android:singleLine="true"
            tools:text="123ddddddddddddddddddddddddddddddddddddddddddddddd"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line_white"
        android:layout_width="@dimen/dimen_14"
        android:layout_height="1dp"
        android:layout_below="@+id/lay_doctor"
        android:background="@color/color_white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lay_doctor"
        android:layout_toRightOf="@+id/tv_line_white"
        android:background="#e7ecee"/>
</RelativeLayout>
