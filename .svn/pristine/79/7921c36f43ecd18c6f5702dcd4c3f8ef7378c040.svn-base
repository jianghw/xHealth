<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_complete"
        style="@style/Complete_Text"
        android:text="完成"
        android:textColor="@color/color_gray"/>

    <TextView
        style="@style/line_mine"
        android:layout_marginTop="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <biz.kasual.materialnumberpicker.MaterialNumberPicker
            android:id="@+id/numberpicker_year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:npSeparatorColor="#cccccc"
            app:npTextColor="@color/color_white"
            app:npTextSize="18sp"/>

        <biz.kasual.materialnumberpicker.MaterialNumberPicker
            android:id="@+id/numberpicker_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:npSeparatorColor="#cccccc"
            app:npTextColor="@color/color_gray"
            app:npTextSize="18sp"/>

        <biz.kasual.materialnumberpicker.MaterialNumberPicker
            android:id="@+id/numberpicker_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:npSeparatorColor="#cccccc"
            app:npTextColor="@color/color_gray"
            app:npTextSize="18sp"/>

        <biz.kasual.materialnumberpicker.MaterialNumberPicker
            android:id="@+id/numberpicker_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:npSeparatorColor="#cccccc"
            app:npTextColor="@color/color_gray"
            app:npTextSize="18sp"/>

        <biz.kasual.materialnumberpicker.MaterialNumberPicker
            android:id="@+id/numberpicker_year2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:npSeparatorColor="#cccccc"
            app:npTextColor="@color/color_white"
            app:npTextSize="18sp"/>
    </LinearLayout>

</LinearLayout>