<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg_gray"
              android:orientation="vertical">


    <include
        android:id="@+id/regist_to_mine"
        layout="@layout/include_regist_to_mine_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlay_name"
            style="@style/Bg_Lay_Press">

            <TextView
                style="@style/Doctor_TitleText"
                android:text="姓名"/>

            <ImageView style="@style/Image_Arrow_Right"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/Doctor_BodyText"
                tools:text="xxxxxxxxxxx"/>
        </RelativeLayout>

        <TextView style="@style/Line_Gap"/>

        <RelativeLayout
            android:id="@+id/rlay_sex"
            style="@style/Bg_Lay_Press">

            <TextView
                style="@style/Doctor_TitleText"
                android:text="性别"/>

            <ImageView style="@style/Image_Arrow_Right"/>

            <TextView
                android:id="@+id/tv_gender"
                style="@style/Doctor_BodyText"
                tools:text="xxxxxxxxxxx"/>
        </RelativeLayout>

        <TextView style="@style/Line_Gap"/>


        <RelativeLayout
            android:id="@+id/rlay_department"
            style="@style/Bg_Lay_Press">

            <TextView
                style="@style/Doctor_TitleText"
                android:text="科室"/>

            <ImageView style="@style/Image_Arrow_Right"/>

            <TextView
                android:id="@+id/tv_department"
                style="@style/Doctor_BodyText"
                android:singleLine="true"
                tools:text="xxxxxxxxxxxxxxxxxxxxxxx"/>
        </RelativeLayout>


        <TextView style="@style/Line_Gap"/>


        <RelativeLayout
            android:id="@+id/rlay_organization"
            style="@style/Bg_Lay_Press">

            <TextView
                style="@style/Doctor_TitleText"
                android:text="机构"/>

            <ImageView
                style="@style/Image_Arrow_Right"
                android:src="@mipmap/arrow_right"/>

            <TextView
                android:id="@+id/tv_organization"
                style="@style/Doctor_BodyText"
                android:maxEms="10"
                android:paddingLeft="20dp"
                android:singleLine="true"
                tools:text="ssssssssssssssssssssssssssssssssssssssssss"/>
        </RelativeLayout>


        <TextView style="@style/Line_Gap"/>

        <RelativeLayout
            android:id="@+id/rlay_post"
            style="@style/Bg_Lay_Press">

            <TextView
                style="@style/Doctor_TitleText"
                android:text="职称"/>

            <ImageView style="@style/Image_Arrow_Right"/>

            <TextView
                android:id="@+id/tv_job"
                style="@style/Doctor_BodyText"
                tools:text="xxxxxxxxxxx"/>
        </RelativeLayout>

        <TextView style="@style/Line_Gap"/>

        <RelativeLayout
            android:id="@+id/rlay_num"
            style="@style/Bg_Lay_Press">

            <TextView
                style="@style/Doctor_TitleText"
                android:text="执业证号"/>

            <ImageView
                style="@style/Image_Arrow_Right"
                android:src="@mipmap/arrow_right"/>

            <TextView
                android:id="@+id/tv_num"
                style="@style/Doctor_BodyText"
                android:singleLine="true"
                tools:text="11111111111111111"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>