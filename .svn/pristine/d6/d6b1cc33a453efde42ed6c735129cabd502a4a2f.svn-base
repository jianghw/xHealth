<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

    <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cv_recently"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/dimen_6"-->
        <!--android:layout_marginRight="@dimen/dimen_6"-->
        <!--app:cardBackgroundColor="@color/color_white"-->
        <!--app:cardCornerRadius="@dimen/dimen_12"-->
        <!--app:cardElevation="@dimen/dimen_4"-->
        <!--app:cardUseCompatPadding="true">-->

        <LinearLayout
            android:id="@+id/cv_recently"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginRight="@dimen/dimen_14"
            android:layout_marginTop="@dimen/dimen_14"
            android:background="@drawable/bg_card_radius"
            android:padding="@dimen/dimen_14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近临床诊疗"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/textSize_16"/>
            <!--时间-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--类型-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--项目-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--医师-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--科室-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_departments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--机构-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--住院号-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_hospitalNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--疾病-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--现病史-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--辅助检查-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_accessory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <!--实验室检查-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <!--病理-->
            <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
                android:id="@+id/lay_pathology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_recently_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/dimen_4"
                android:drawableRight="@drawable/more_icon"
                android:text="历史记录"
                android:textColor="@color/color_text_blue"
                android:textSize="@dimen/textSize_14"
                android:visibility="gone"/>
        </LinearLayout>
</merge>