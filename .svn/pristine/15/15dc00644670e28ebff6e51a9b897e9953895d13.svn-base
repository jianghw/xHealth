<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

        <LinearLayout style="@style/Lay_Horizontal">
            <TextView
                style="@style/BodyText_Title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text="网络咨询原因"/>

            <TextView
                android:id="@+id/tv_reason_fir"
                style="@style/Record_BodyText"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="13dp"
                android:text="门诊辅助检查结果与治疗计划更新"/>


            <com.rey.material.widget.CheckBox
                android:id="@+id/cb_reason_fir"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout  style="@style/Lay_Horizontal">
            <TextView
                style="@style/BodyText_Title"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <TextView
                style="@style/Record_BodyText"
                android:id="@+id/tv_reason_sec"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="13dp"
                android:text="日常复诊"/>

            <com.rey.material.widget.CheckBox
                android:id="@+id/cb_reason_sec"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout style="@style/Lay_Horizontal">
            <TextView
                style="@style/BodyText_Title"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_reason_third"
                style="@style/Record_BodyText"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="13dp"
                android:text="其它健康问题"/>


            <com.rey.material.widget.CheckBox
                android:id="@+id/cb_reason_third"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"/>

        </LinearLayout>
</merge>