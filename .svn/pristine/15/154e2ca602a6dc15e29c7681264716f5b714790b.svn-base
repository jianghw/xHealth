<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    android:gravity="center_horizontal"
    >

    <com.kaurihealth.utilslib.widget.CircleImageView
        android:id="@+id/civ_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_circle_head_green"
        app:civ_border_color="@color/color_enable_green"
        app:civ_border_overlay="true"
        app:civ_border_width="0.1dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字"
        android:textSize="14sp"
        android:id="@+id/tv_name"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="科室"
        android:textSize="13sp"
        android:textColor="#ff9800"
        android:id="@+id/tv_ks"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医院"
        android:textSize="12sp"
        android:id="@+id/tv_yy"/>
    <Button
        android:id="@+id/btn_chat"
        android:background="@mipmap/btn_chat"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:textSize="13sp"
        android:text="留言"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/btn_add"
        android:visibility="gone"
        android:background="@mipmap/btn_add"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:textSize="13sp"
        android:text="留言"
        android:textColor="#ffffff"/>


</LinearLayout>