<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    ScrollView控件Start,全局-->
   <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--ScrollView的唯一一个子控件Start,到注册按钮为止-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--KauriHealth Logo-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_logo_tree"/>

            <!--手机号Start-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="20dp">
                <View style="@style/Login_Vertical_Line" />

                <EditText
                    android:id="@+id/edt_phone_number"
                    style="@style/Login_EditText"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:drawableLeft="@mipmap/phone_icon_on"
                    android:drawablePadding="22dp"
                    android:drawableStart="@mipmap/phone_icon_on"
                     />
                <!--android:hint="@string/register_phone_number"-->
               <!--手机号End-->
            </RelativeLayout>

            <TextView
                style="@style/Line_Gap"
                android:background="@color/color_enable_green" />

            <!--验证码Start-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp">

                <View style="@style/Login_Vertical_Line" />




                <EditText
                    android:id="@+id/edt_verification_code"
                    style="@style/Login_EditText"
                    android:background="@null"
                    android:drawableLeft="@mipmap/code_icon_on"
                    android:drawableStart="@mipmap/code_icon_on"
                    android:drawablePadding="20dp"
                    android:hint="@string/register_verifycode"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/tv_get_verificationcode"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_login"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="获取验证码"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
                        android:id="@+id/tv_get_verificationcode"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_btn_login"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="获取验证码"
                        android:textColor="@color/color_white"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        />

                <EditText
                    android:id="@+id/edt_verification_code"
                    style="@style/Login_EditText"
                    android:background="@null"
                    android:drawableLeft="@mipmap/code_icon_on"
                    android:drawableStart="@mipmap/code_icon_on"
                    android:drawablePadding="20dp"
                     />
                <!--android:hint="@string/register_verifycode"-->
                <!--验证码End-->
            </RelativeLayout>

            <TextView
                style="@style/Line_Gap"
                android:background="@color/color_enable_green" />

            <!--设置密码Start-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="8dp">

                <View style="@style/Login_Vertical_Line" />

                <EditText
                    android:id="@+id/edt_password"
                    style="@style/Login_EditText"
                    android:layout_marginTop="0dp"
                    android:hint="新密码"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/password_icon_on"
                    android:drawableStart="@mipmap/password_icon_on"
                    android:drawablePadding="24dp"
                    android:layout_centerVertical="true"
                    />

                <!--设置密码End-->
            </RelativeLayout>

            <TextView
                style="@style/Line_Gap"
                android:background="@color/color_enable_green" />



            <!--确认密码Start-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="8dp">
                <View style="@style/Login_Vertical_Line" />
                <EditText
                    android:id="@+id/edt_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Login_EditText"
                    android:hint="确认新密码"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:drawableLeft="@mipmap/password_icon_on"
                    android:drawableStart="@mipmap/password_icon_on"
                    android:drawablePadding="24dp"
                    />
             <!--确认密码End-->
            </RelativeLayout>


            <TextView
                style="@style/Line_Gap"
                android:background="@color/color_enable_green" />




            <!--注册-->
            <Button
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_login"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="注册"
                android:textColor="@color/color_white"
                android:textSize="18sp"/>


            <!--同意协议Start-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_tv_agree"
                    android:textSize="12sp"
                    />


                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《佳仁健康注册协议》"
                    android:textColor="@color/color_green"/>
                <!--同意协议End-->
            </LinearLayout>

            <!--ScrollView的唯一一个子控件End-->
        </LinearLayout>

        <!--ScrollView控件End-->
</ScrollView>

</LinearLayout>