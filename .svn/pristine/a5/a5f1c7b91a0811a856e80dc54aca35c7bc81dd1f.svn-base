<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray"
    android:orientation="vertical"
    tools:context=".hospital_v.HospitalNameActivity">

    <include
        android:id="@+id/in_title"
        layout="@layout/include_action_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height_48"
        android:background="@color/color_white">

        <EditText
            android:id="@+id/edt_hospitalName"
            style="@style/EditText_Frame"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/padding_6"
            android:hint="输入医院名称"
            android:inputType="number"
            android:maxLength="24" />

        <ImageView
            android:id="@+id/ivDelete"
            style="@style/Img_Delete"
            android:layout_marginRight="@dimen/margin_16"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:scrollbars="none" />
</LinearLayout>
