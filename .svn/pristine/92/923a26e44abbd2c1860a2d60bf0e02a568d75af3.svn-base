<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efeff4"
        android:paddingLeft="12dp"
        android:textSize="14sp"
        tools:text="G字母"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/dimen_14">

        <com.kaurihealth.utilslib.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_circle_head_green"
            app:civ_border_color="@color/color_cv_border"
            app:civ_border_overlay="true"
            app:civ_border_width="0.5dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_toRightOf="@+id/iv_avatar"
            android:textColor="#000b23"
            android:textSize="16sp"
            tools:text="Gjiazhe"/>

        <TextView
            android:id="@+id/tv_doctor_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_toRightOf="@+id/tv_name"
            android:textColor="#293d47"
            android:textSize="14sp"
            tools:text="12"/>

        <TextView
            android:id="@+id/tv_doctor_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_avatar"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_toRightOf="@+id/iv_avatar"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#8ba4c4"
            tools:text="123"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_height="1dp"
        android:textColor="#e7ecee"/>
</LinearLayout>