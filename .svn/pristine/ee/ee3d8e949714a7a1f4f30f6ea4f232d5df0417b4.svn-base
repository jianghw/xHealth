<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_title_medicalhistory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height_48"
        android:background="@color/color_enable_green">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_radio_group_case"
            android:orientation="horizontal"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/rbtn_patient"
                style="@style/Friend_RadioButton"
                android:background="@drawable/bg_rbtn_left"
                android:text="患者"
                android:textColor="@color/color_rb_friend"/>

            <RadioButton
                android:id="@+id/rbtn_doctor"
                style="@style/Friend_RadioButton"
                android:background="@drawable/bg_rbtn_right"
                android:text="医生"
                android:textColor="@color/color_rb_friend"/>
        </RadioGroup>

        <ImageView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@mipmap/add_doctor"
            android:textColor="@color/color_white" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_relation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>