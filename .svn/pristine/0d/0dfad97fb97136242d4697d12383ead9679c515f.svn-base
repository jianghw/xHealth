                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_dot_sel"
                android:button="@null"
                android:checked="true"
                android:clickable="false"/>

            <RadioButton
                android:id="@+id/rbtn_two"
