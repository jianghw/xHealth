                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_dot_sel"
                android:button="@null"
                android:checked="false"
                android:clickable="false"/>
        </RadioGroup>
    </RelativeLayout>

