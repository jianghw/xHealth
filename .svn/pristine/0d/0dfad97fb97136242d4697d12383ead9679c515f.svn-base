                    android:textSize="17sp"
                    android:id="@+id/textView3" />

                <TextView
                    android:id="@+id/tv_patient_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp" />
            </LinearLayout>
