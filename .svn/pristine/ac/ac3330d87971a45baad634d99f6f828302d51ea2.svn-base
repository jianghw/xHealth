<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_title_medicalhistory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height_48"
        android:background="@color/color_enable_green">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/toptitleback"/>

        <TextView
            style="@style/toptitletv"
            android:text="为患者注册"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_operate"
            style="@style/toptitleedit"
            android:text="注册完成"/>
    </RelativeLayout>

<!--患者手机号-->
    <RelativeLayout
        style="@style/open_an_account">
        <View style="@style/Login_Vertical_Line" />

        <EditText
            android:id="@+id/tvPhone"
            style="@style/Login_EditText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableLeft="@mipmap/phone_icon"
            android:drawablePadding="22dp"
            android:hint="@string/patient_phone_unmber" />
        <!--@mipmap/phone_icon_on-->
        <TextView
            style="@style/Img_Delete"
            android:textColor="#e40404"
            android:text="*"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_01"
        style="@style/Line_of_open_account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <!--患者手机号-->

    <!--患者姓-->
    <RelativeLayout
        style="@style/open_an_account">
        <View style="@style/Login_Vertical_Line" />

        <EditText
            android:id="@+id/tvFirstName"
            style="@style/Login_EditText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableLeft="@mipmap/name_icon"
            android:drawablePadding="22dp"
            android:hint="@string/patient_first_name" />
        <!--android:drawableLeft="@mipmap/name_icon_on"-->
        <TextView
            style="@style/Img_Delete"
            android:textColor="#e40404"
            android:text="*"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_02"
        style="@style/Line_of_open_account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <!--患者姓-->

    <!--患者名-->
    <RelativeLayout
        style="@style/open_an_account">
        <View style="@style/Login_Vertical_Line" />

        <EditText
            android:id="@+id/tvLastName"
            style="@style/Login_EditText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableLeft="@mipmap/name_icon"
            android:drawablePadding="22dp"
            android:hint="@string/patient_last_name" />
        <TextView
            style="@style/Img_Delete"
            android:textColor="#e40404"
            android:text="*"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_03"
        style="@style/Line_of_open_account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
         />
    <!--患者名-->

    <!--男女-->
    <RelativeLayout
        style="@style/open_an_account">

        <RadioGroup
            android:id="@+id/id_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@null"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/selector_male"
                android:drawablePadding="10dp"
                android:textColor="@drawable/open_account_color"
                android:text="男"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_female"
                android:drawablePadding="10dp"
                android:paddingLeft="50dp"
                android:textColor="@drawable/open_account_color"
                android:text="女"
                android:textSize="14sp" />

        </RadioGroup>
        <TextView
            style="@style/Img_Delete"
            android:textColor="#e40404"
            android:text="*"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_04"
        style="@style/Line_of_open_account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <!--男女-->


    <!--生日-->
    <RelativeLayout
        style="@style/open_an_account">
        <View style="@style/Login_Vertical_Line" />

        <TextView
            android:id="@+id/tvBirthday"
            style="@style/Login_EditText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableLeft="@mipmap/date_icon"
            android:drawablePadding="22dp"
            android:hint="@string/patient_birthday" />
        <TextView
            style="@style/Img_Delete"
            android:textColor="#e40404"
            android:text="*"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_05"
        style="@style/Line_of_open_account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <!--生日-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/tv_open_accuont_complete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/margin_26"
            android:layout_marginRight="@dimen/margin_26"
            android:gravity="center"
            android:textColor="#ffff"
            android:textSize="14dp"
            android:enabled="false"
            android:text="建立完成"
            android:background="@drawable/btn_gray"/>

    </RelativeLayout>

</LinearLayout>
