<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <com.kaurihealth.utilslib.widget.UiItemImg
            android:id="@+id/img_ui_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tv_ui_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_ui_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_bottom"
        android:layout_alignTop="@+id/ll_bottom"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_4"
        android:src="@mipmap/reddot"
        android:gravity="center"
        android:visibility="invisible" />

</RelativeLayout>