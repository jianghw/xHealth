<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_outpatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_marginRight="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dimen_12"
        app:cardElevation="@dimen/dimen_4">

        <com.kaurihealth.utilslib.widget.OutpatientGroupView
            android:id="@+id/lay_outpatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingRight="@dimen/dimen_14">
        </com.kaurihealth.utilslib.widget.OutpatientGroupView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_outpatient_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_marginRight="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dimen_12"
        app:cardElevation="@dimen/dimen_4">

        <!--上传附件-->
        <com.kaurihealth.utilslib.widget.ReviewImageLayout
            android:id="@+id/lay_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_14"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="上传附件："/>
    </android.support.v7.widget.CardView>

</merge>