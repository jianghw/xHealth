<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_court_measurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_14"
        android:orientation="vertical">

        <TextView style="@style/Line_Match"/>

        <!--医师-->
        <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
            android:id="@+id/lay_court_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="医师："/>

        <!--科室-->
        <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
            android:id="@+id/lay_court_departments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="科室："/>

        <!--机构-->
        <com.kaurihealth.utilslib.widget.RecentlyRecordLayout
            android:id="@+id/lay_court_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="机构："/>

        <!--上传附件-->
        <com.kaurihealth.utilslib.widget.ReviewImageLayout
            android:id="@+id/lay_court_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:RecentlyCompileMode="true"
            app:RecentlyTitle="上传附件："/>

    </LinearLayout>
</merge>