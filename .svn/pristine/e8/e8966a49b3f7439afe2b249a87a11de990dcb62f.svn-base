<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/input_bar_layout_action"
              android:layout_width="match_parent"
              android:layout_height="140dp"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
              android:visibility="gone"
              android:weightSum="4">

    <TextView
        android:id="@+id/input_bar_btn_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/bg_bottom_bar_picture_button"
        android:gravity="center"
        android:text="照片"/>

    <TextView
        android:id="@+id/input_bar_btn_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/bg_bottom_bar_camera_button"
        android:gravity="center"
        android:text="拍摄"/>

    <TextView
        android:id="@+id/input_bar_btn_medical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/bg_bottom_bar_roport_button"
        android:gravity="center"
        android:text="病历"/>

    <TextView
        android:id="@+id/input_bar_btn_referral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/bg_bottom_bar_referral_button"
        android:gravity="center"
        android:text="转诊"/>

</LinearLayout>
