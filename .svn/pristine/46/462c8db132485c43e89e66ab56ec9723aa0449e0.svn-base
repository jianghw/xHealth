<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

    <!--<android.support.v7.widget.CardView-->
    <!--android:id="@+id/cv_patient"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="@dimen/dimen_6"-->
    <!--android:layout_marginRight="@dimen/dimen_6"-->
    <!--app:cardBackgroundColor="@color/color_white"-->
    <!--app:cardCornerRadius="@dimen/dimen_12"-->
    <!--app:cardElevation="@dimen/dimen_4"-->
    <!--app:cardUseCompatPadding="true">-->

    <RelativeLayout
        android:id="@+id/cv_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_marginRight="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_14"
        android:background="@drawable/bg_card_radius"
        android:paddingBottom="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_14">

        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_14"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/textSize_16"
            tools:text="央企小"/>

        <ImageView
            android:id="@+id/img_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_patient_name"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toEndOf="@+id/tv_patient_name"
            android:layout_toRightOf="@+id/tv_patient_name"
            android:src="@drawable/gender_icon"/>

        <TextView
            android:id="@+id/tv_patient_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_patient_name"
            android:layout_toRightOf="@+id/img_gender"
            android:textColor="@color/color_text_age_black"
            android:textSize="@dimen/textSize_10"
            tools:text="20岁"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_address_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_14"
            android:drawableLeft="@drawable/dot_red"
            android:drawablePadding="@dimen/dimen_8"
            android:textColor="@color/color_text_red"
            android:textSize="@dimen/textSize_12"
            tools:text="门诊"/>

        <TextView
            android:id="@+id/tv_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_patient_name"
            android:layout_below="@+id/tv_patient_name"
            android:layout_marginTop="@dimen/dimen_14"
            android:text="电话："
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/textSize_12"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_phone_title"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_toRightOf="@+id/tv_phone_title"
            android:textColor="@color/color_text_age_black"
            android:textSize="@dimen/textSize_12"
            tools:text="15242145784"/>

        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_patient_name"
            android:layout_below="@+id/tv_phone_title"
            android:layout_marginTop="@dimen/dimen_14"
            android:text="地址："
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/textSize_12"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_address_title"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_toLeftOf="@+id/tv_type"
            android:layout_toRightOf="@+id/tv_address_title"
            android:textColor="@color/color_text_age_black"
            android:textSize="@dimen/textSize_12"
            tools:text="疾辅导辅导费病dfssfsfsfdsfd辅导辅导费的丰富的地方"/>

        <android.support.v7.widget.CardView
            android:id="@+id/tv_referral"
            android:layout_width="@dimen/dimen_95"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_address_title"
            android:layout_marginRight="@dimen/dimen_8"
            app:cardBackgroundColor="@color/color_referral_orange"
            app:cardCornerRadius="@dimen/dimen_12"
            app:cardElevation="@dimen/dimen_4"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/tratement_icon"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_6"
                android:paddingLeft="@dimen/dimen_14"
                android:paddingRight="@dimen/dimen_14"
                android:paddingTop="@dimen/dimen_6"
                android:text="转诊"
                android:textColor="@color/color_white"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/tv_add"
            android:layout_width="@dimen/dimen_95"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_address_title"
            android:layout_marginRight="@dimen/dimen_8"
            app:cardBackgroundColor="@color/color_text_green"
            app:cardCornerRadius="@dimen/dimen_12"
            app:cardElevation="@dimen/dimen_4"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/add_icon"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_6"
                android:paddingLeft="@dimen/dimen_14"
                android:paddingRight="@dimen/dimen_14"
                android:paddingTop="@dimen/dimen_6"
                android:text="添加"
                android:textColor="@color/color_white"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/tv_chat"
            android:layout_width="@dimen/dimen_95"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_title"
            android:layout_marginRight="@dimen/dimen_14"
            android:layout_marginTop="@dimen/dimen_18"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_chat_blue"
            app:cardCornerRadius="@dimen/dimen_12"
            app:cardElevation="@dimen/dimen_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/message_icon"
                android:drawablePadding="@dimen/dimen_4"
                android:text="留言"
                android:textColor="@color/color_white"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</merge>